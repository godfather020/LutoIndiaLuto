<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <ProgressBar
        android:id="@+id/progess_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/buy_ticket_txt_draw"
        style="@style/TextSemiBold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/monthly_draw"
        android:textSize="@dimen/txt_lg"
        android:layout_marginTop="10dp"
        android:layout_marginStart="19dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/buy_ticket_btn_ticket"
        style="@style/Button"
        android:layout_height="@dimen/_25sdp"
        android:layout_marginEnd="19dp"
        android:padding="@dimen/_1sdp"
        android:text="@string/buy_now"
        android:textSize="@dimen/txt_sm"
        app:layout_constraintBottom_toBottomOf="@+id/buy_ticket_txt_draw"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/buy_ticket_txt_draw" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/buy_ticket_rv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:paddingBottom="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buy_ticket_btn_ticket"
        app:layout_constraintVertical_bias="0.0"
        tools:listitem="@layout/rv_ticket_list" />
</androidx.constraintlayout.widget.ConstraintLayout>
</layout>