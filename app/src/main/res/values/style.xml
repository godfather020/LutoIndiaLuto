<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="TextHeader">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/txt_lg</item>
        <item name="fontFamily">@font/lexend_bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextSubHeader">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/txt_md</item>
        <item name="fontFamily">@font/lexend_regular</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextExtraBold">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/txt_sm</item>
        <item name="fontFamily">@font/lexend_extrabold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextSemiBold">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/txt_md</item>
        <item name="fontFamily">@font/lexend_semibold</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="TextLight">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/txt_sm</item>
        <item name="fontFamily">@font/lexend_light</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextEdtHint">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/txt_sm</item>
        <item name="fontFamily">@font/lexend_regular</item>
        <item name="android:translationY">10dp</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:background">@color/bg_edt_hint_color</item>
        <item name="android:elevation">1dp</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:paddingTop">1dp</item>
        <item name="android:paddingBottom">1dp</item>
        <item name="android:textColor">@color/black</item>
    </style>


    <style name="Button" parent="TextAppearance.AppCompat.Button" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/txt_lg</item>
        <item name="fontFamily">@font/lexend_bold</item>
        <item name="android:background">@drawable/bg_btn</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:clickable">true</item>
        <item name="android:paddingStart">40dp</item>
        <item name="android:paddingEnd">40dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
    </style>


    <style name="TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusBottomEnd">@dimen/_599sdp</item>
        <item name="boxCornerRadiusBottomStart">@dimen/_599sdp</item>
        <item name="boxCornerRadiusTopEnd">@dimen/_599sdp</item>
        <item name="boxCornerRadiusTopStart">@dimen/_599sdp</item>
        <item name="boxStrokeColor">@color/app_theme</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="hintTextColor">@color/app_theme</item>
        <item name="fontFamily">@font/lexend_regular</item>
    </style>

    <style name="EditText"  >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/_45sdp</item>
        <item name="android:paddingStart">28dp</item>
        <item name="android:paddingLeft">28dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="fontFamily">@font/lexend_regular</item>
    </style>



    <style name="EditTextOtp">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/_45sdp</item>
        <item name="android:textSize">@dimen/txt_md</item>
        <item name="fontFamily">@font/lexend_bold</item>
        <item name="android:background">@drawable/bg_edt</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="checkBoxStyle" parent="Base.Theme.AppCompat">
        <item name="colorAccent">@color/green</item>
    </style>


</resources>